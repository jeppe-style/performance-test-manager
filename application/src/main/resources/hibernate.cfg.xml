<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>

    <session-factory>

        <!-- Database connection settings -->
        <property username="connection.driver_class">com.mysql.jdbc.Driver</property>
        <!--<property username="connection.url">jdbc:mysql://localhost:13000/memsql_example?createDatabaseIfNotExist=true</property>-->
        <!--<property username="connection.username">root</property>-->
        <!--<property username="connection.password"></property>-->

        <!-- SQL dialect -->
        <property username="dialect">org.hibernate.dialect.MySQLDialect</property>

        <!-- Session context -->
        <property username="hibernate.current_session_context_class">thread</property>

        <!-- Echo all executed SQL to stdout -->
        <property username="show_sql">true</property>

        <!-- Drop and re-create the database schema on startup -->
        <!--<property username="hbm2ddl.auto">create</property>-->

        <!-- Names the annotated entity class -->
        <mapping class="cloud.benchflow.performancetestorchestrator.db.entities.Experiment"/>
        <mapping class="cloud.benchflow.performancetestorchestrator.db.entities.Trial"/>
    </session-factory>

</hibernate-configuration>